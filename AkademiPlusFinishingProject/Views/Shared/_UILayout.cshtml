@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Html.PartialAsync("~/Views/UILayoutPartial/_HeaderPartial.cshtml")

<body>
    <!--! header start  -->
    <header>
        @await Html.PartialAsync("~/Views/UILayoutPartial/_GlobalNotification.cshtml")
        <div class="header-row">
            <div class="container">
                <div class="header-wrapper">
                    <div class="header-mobile">
                        <i class="bi bi-list" id="btn-menu"></i>
                    </div>
                    @await Html.PartialAsync("~/Views/UILayoutPartial/_HeaderLeftPartial.cshtml")
                    @await Html.PartialAsync("~/Views/UILayoutPartial/_HeaderCenterPartial.cshtml")
                    @await Html.PartialAsync("~/Views/UILayoutPartial/_HeaderRightPartial.cshtml")
                </div>
            </div>
        </div>
    </header>
    <!--! header end  -->
    @RenderBody()
    <!--! footer start  -->
    <footer class="footer">
        @await Html.PartialAsync("~/Views/UILayoutPartial/_FooterSubscribePartial.cshtml")
        @await Html.PartialAsync("~/Views/UILayoutPartial/_FooterWidgetsPartial.cshtml")
        @await Html.PartialAsync("~/Views/UILayoutPartial/_FooterCopyrightPartial.cshtml")

    </footer>
    <!--! footer end  -->
    <!-- javascript  -->
    @await Html.PartialAsync("~/Views/UILayoutPartial/_ScriptsPartial.cshtml")
</body>

</html>