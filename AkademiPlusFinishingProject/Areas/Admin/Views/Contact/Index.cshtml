@model List<Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>İletişim Sayfası Gelen Mesajlar</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Konu</th>
        <th>Mesaj</th>
        <th>Tarih</th>
        <th>Sil</th>     
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ContactID</td>
            <td>@x.NameSurname</td>
            <td>@x.Subject</td>
            <td>@x.Message</td>
            <td>@(((DateTime)x.Date).ToString("dd-MMM-yyyy"))</td>
            <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
           
        </tr>
    }
</table>