@using EntityLayer.Concrete
@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-head-fixed text-nowrap">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kategori Adı</th>
            <th>Kategori Durumu</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.CategoryID</td>
                <td>@x.CategoryName</td>
                <td>@x.Status</td>
                <td><a href="/Admin/Category/DeleteCategory/@x.CategoryID" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Admin/Category/UpdateCategory/@x.CategoryID" class="btn btn-outline-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Admin/Category/AddCategory/" class="btn btn-outline-info">Yeni Kategori Ekle</a>