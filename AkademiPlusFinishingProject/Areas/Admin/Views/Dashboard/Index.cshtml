@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <!-- Widget: user widget style 1 -->
            <div class="card card-widget widget-user">
                <!-- Add the bg color to the header using any of the bg-* classes -->
                <div class="widget-user-header bg-info">
                    <h3 class="widget-user-username">@ViewBag.userName</h3>
                    <h5 class="widget-user-desc">Admin</h5>
                </div>
                <div class="widget-user-image">
                    <img class="img-circle elevation-2" src="~/UserImages/@ViewBag.userImage" alt="User Avatar">
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-sm-4 border-right">
                            <div class="description-block">
                                <h5 class="description-header">Yaşadığı Şehir</h5>
                                <span class="description-text">@ViewBag.userCity</span>
                            </div>
                            <!-- /.description-block -->
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4 border-right">
                            <div class="description-block">
                                <h5 class="description-header">İletişim Bilgisi</h5>
                                <span class="description-text">@ViewBag.userPhone</span>
                            </div>
                            <!-- /.description-block -->
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4">
                            <div class="description-block">
                                <h5 class="description-header">Mail Adresi</h5>
                                <span class="description-text">@ViewBag.userMail</span>
                            </div>
                            <!-- /.description-block -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
            </div>
            <!-- /.widget-user -->
        </div>


    </div>
    @await Component.InvokeAsync("_AdminDashboardStatistics")
    @await Component.InvokeAsync("_AdminDashboardUsers")

</div>