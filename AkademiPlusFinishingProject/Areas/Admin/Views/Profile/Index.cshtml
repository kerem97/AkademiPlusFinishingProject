@using AkademiPlusFinishingProject.Areas.Member.Models
@model UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Profil  Bilgileri Düzenleme Sayfası</h3>
<div class="row">
    <div class="col-md-12">
        <!-- Widget: user widget style 1 -->
        <div class="card card-widget widget-user">
            <!-- Add the bg color to the header using any of the bg-* classes -->
            <div class="widget-user-header bg-info">
                <h3 class="widget-user-username">@ViewBag.userName</h3>
                <h5 class="widget-user-desc">Admin</h5>
            </div>
            <div class="widget-user-image">
                <img class="img-circle elevation-2" src="~/UserImages/@ViewBag.userImage" alt="User Avatar">
            </div>
          
        </div>
        <!-- /.widget-user -->
    </div>


</div>
<div class="container">
    <form method="post" enctype="multipart/form-data">
        @Html.Label("Adınız")
        <input asp-for="name" class="form-control" />
        <br />
        @Html.Label("Soyadınız")
        <input asp-for="surname" class="form-control" />
        <br />
        @Html.Label("Mail Adresiniz")
        <input asp-for="mail" class="form-control" />
        <br />
        @Html.Label("Şifreniz")
        <input type="password" asp-for="password" class="form-control" />
        <br />
        @Html.Label("Şifre Onayı")
        <input type="password" asp-for="confirmpassword" class="form-control" />
        <br />
        @Html.Label("İletişim Bilgisi")
        <input asp-for="phonenumber" class="form-control" />
        <br />
        <div class="form-group">
            <label>Bir resim seçin</label>
            <input type="file" asp-for="Image" />
        </div>
        @*  <div class="button-wrapper">
        <label for="upload" class="btn btn-primary me-2 mb-4">

        <input type="file" asp-for="Image" />
        </label>

        </div>*@
        <br />

        <button class="btn btn-outline-info">Kaydet</button>


    </form>

</div>

